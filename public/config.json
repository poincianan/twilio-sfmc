{
    "workflowApiVersion": "1.1",
    "metaData": {
       "icon": "images/iconSmall.png",
       "category": "message"
    },
    "type": "REST",
    "lang": {
       "en-US": {
           "name": "Twilio SMS",
           "description": "Send Twilio SMS with Journey Builder",
           "TwilioMessage":"test"
       }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                        {
                          "emailAddress": "{{InteractionDefaults.Email}}"
                        },
                        {
                          "to": "{{Contact.Attribute.Custom_SMS.twilioNumber}}"
                        }               
            ],
            "outArguments": [],
            "url": "https://twilio-sms-custom-activity-47671e1dafe3.herokuapp.com/journeybuilder/execute/",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 100000,
            "retryCount": 1,
            "retryDelay": 10000,
            "concurrentRequests": 5
        }
    },
    "configurationArguments": {
      "applicationExtensionKey": "e5a60ad3-5916-4f1a-b2cb-1df0a8632ce6",
       "save": {
           "url": "https://twilio-sms-custom-activity-47671e1dafe3.herokuapp.com/journeybuilder/save/",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 3000 
       },
       "publish": {
           "url": "https://twilio-sms-custom-activity-47671e1dafe3.herokuapp.com/journeybuilder/publish/",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 3000
       },
       "validate": {
           "url": "https://twilio-sms-custom-activity-47671e1dafe3.herokuapp.com/journeybuilder/validate/",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 3000
       },
       "stop": {
           "url": "https://twilio-sms-custom-activity-47671e1dafe3.herokuapp.com/journeybuilder/stop",
            "verb": "POST",
            "body": "",
            "format": "json",
            "useJwt": false,
            "timeout": 3000
       }
    },
    "wizardSteps": [
       { "label": "Create SMS Message", "key": "step1" }
    ],
    "userInterfaces": {
       "configModal": {
           "height": 600,
           "width": 800,
           "fullscreen": false
       }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [{
                        "accountSid": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"   
                        }
                    },                    
                    {
                        "authToken": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"   
                        }
                    },                    
                    {
                        "from": {
                            "dataType": "Phone",
                            "isNullable": true,
                            "direction": "out"   
                        }
                    },                    
                    {
                        "to": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "out"   
                        }
                    },
                    {
                        "body": {
                            "dataType": "String",
                            "isNullable": false,
                            "direction": "out"   
                        }
                    },                    
                    {
                        "email": {
                            "dataType": "Email",
                            "isNullable": true,
                            "direction": "out"
                        }
                    }
                ],
                "outArguments": []
            }
        }
    }
}
